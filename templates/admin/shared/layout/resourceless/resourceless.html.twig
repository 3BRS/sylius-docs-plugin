{% extends '@SyliusAdmin/shared/layout/base.html.twig' %}

{# Prepare reusable variables like Sylius does internally in CRUD controllers #}
{# applicationName and pluralName are used as fallbacks for the breadcrumb,
   see vendor/sylius/sylius/src/Sylius/Bundle/AdminBundle/templates/shared/crud/index/content/header/breadcrumbs.html.twig.
   Change it by passing 'title' when rendering the template. #}
{% set metadata = metadata|default({
    applicationName: 'threebrs',
    pluralName: 'documentation_plugin.header',
    name: '_empty',
}) %}

{% set configuration = configuration|default({
    title: 'threebrs_documentation_plugin.ui.admin.documentation.tab_title'|trans
}) %}

{% set resources = resources|default({
    definition: { enabledFilters: false },
    data: {}
}) %}

{% set filters = filters|default({}) %}
{% set resource = null %}

{# Block for title, using configuration title #}
{% block title %}
	{{ configuration.title|trans }}
	|
{{ parent() }}
{% endblock %}

{# Block for stylesheets - delegates to hook #}
{% block stylesheets %}
	{{ parent() }}
{% hook 'threebrs_sylius_documentation_plugin.base#stylesheets' %}
{% endblock %}

{# Block for javascripts - delegates to hook #}
{% block javascripts %}
	{{ parent() }}
{% hook 'threebrs_sylius_documentation_plugin.base#javascripts' %}{% endblock %}
